<form class="form-horizontal" method="post" action="/registration">
      <fieldset>
        <legend>User Registration</legend>
        <div class="control-group">
          <label class="control-label" for="username">Username</label>
          <div class="controls">
            <input type="text" class="input-xlarge" id="username" name="username" />
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="password">Password</label>
          <div class="controls">
            <input type="password" class="input-xlarge" id="password" name="password" />
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="password-repeat">Comfirm Password</label>
          <div class="controls">
            <input type="password" class="input-xlarge" id="password-repeat" name="password-repeat" />
          </div>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Submit</button> 
        </div>
      </fieldset>
</form>
